rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return isSignedIn()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid))
        : null;
    }

    function isAdmin() {
      return isSignedIn()
        && userDoc() != null
        && userDoc().exists()
        && userDoc().data.role == "admin";
    }

    function isOwnerClient(clientId) {
      return isSignedIn()
        && userDoc() != null
        && userDoc().exists()
        && userDoc().data.client_id == clientId;
    }

    function clientDossierUpdateAllowed() {
      return isOwnerClient(resource.data.client_id)
        && request.resource.data.client_id == resource.data.client_id
        && request.resource.data.diff(resource.data).changedKeys()
          .hasOnly(["documents", "notes", "updated_at"]);
    }

    match /leads/{leadId} {
      allow read, write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if isAdmin() || isOwnerClient(clientId);
      allow write: if isAdmin();
    }

    match /dossiers/{dossierId} {
      allow read: if isAdmin() || isOwnerClient(resource.data.client_id);
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || clientDossierUpdateAllowed();
    }

    match /users/{uid} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow write: if isAdmin();
    }

    match /credits_transactions/{txId} {
      allow read: if isAdmin() || isOwnerClient(resource.data.client_id);
      allow write: if isAdmin();
    }

    match /counters/{counterId} {
      allow read, write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
