rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return isSignedIn() && request.auth.token.role == 'admin'; }
    function isClient() { return isSignedIn() && request.auth.token.role == 'client'; }
    function installerId() { return request.auth.token.installerId; }

    // Generic helper for ai_* docs: authorize via clientId (uid) OR installerId, otherwise admin only.
    function canReadAiDoc(data) {
      return isAdmin()
        || (isClient()
            && (
              (data.clientId != null && data.clientId == request.auth.uid)
              || (data.installerId != null && data.installerId == installerId())
            )
          );
    }

    // ---- Existing CRM rules (keep conservative, non-destructive) ----

    match /files/{id} {
      allow read: if isAdmin() || (isClient() && resource.data.installerId == installerId());
      allow create, update, delete: if isAdmin();
    }

    match /clients/{id} {
      allow read: if isAdmin() || (isClient() && request.auth.uid == id);
      allow create, update, delete: if isAdmin();
    }

    match /leads/{id} {
      allow read, create, update, delete: if isAdmin();
    }

    match /counters/{id} {
      allow read, create, update, delete: if isAdmin();
    }

    // ---- AI collections ----
    match /ai_summaries/{id} {
      allow read: if canReadAiDoc(resource.data);
      allow create, update, delete: if isAdmin();
    }

    match /ai_actions/{id} {
      allow read: if canReadAiDoc(resource.data);
      allow create, update, delete: if isAdmin();
    }

    match /ai_chunks/{id} {
      allow read: if canReadAiDoc(resource.data);
      allow create, update, delete: if isAdmin();
    }

    match /ai_logs/{id} {
      allow read, write: if false;
    }
  }
}
