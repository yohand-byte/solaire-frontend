{
  "hosting": {
    "site": "solaire-frontend",
    "public": "apps/solaire-facile/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/admin/**", "destination": "/index.html" },
      { "source": "/client/**", "destination": "/index.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
